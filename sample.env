# ==============================================================================
# DOCKER LAMP - Configuration File
# ==============================================================================
# Copy this file to .env and modify according to your needs
# Each project should have its own .env file with unique ports/names

# ==============================================================================
# PROJECT CONFIGURATION
# ==============================================================================

# Project name - used for container names and network
# Must be unique if you run multiple projects simultaneously
COMPOSE_PROJECT_NAME=lamp

# User/Group IDs for file permissions
# Linux/Mac: Set to your user ID (run 'id -u' and 'id -g' to find yours)
# Windows: Leave as 1000 (permissions handled differently on Windows)
# Note: These values are only used on Linux/Mac, ignored on Windows
USER_ID=1000
GROUP_ID=1000

# ==============================================================================
# ACCESS MODE CONFIGURATION
# ==============================================================================

# Enable reverse proxy mode (nginx container)
# - false: Access via http://localhost:HTTP_PORT (direct port access)
# - true:  Access via https://PROJECT_DOMAIN (domain-based access)
USE_REVERSE_PROXY=false

# Domain name for reverse proxy mode (only used if USE_REVERSE_PROXY=true)
# Don't forget to add this domain to your /etc/hosts file:
# 127.0.0.1    myproject.local
PROJECT_DOMAIN=myproject.local

# ==============================================================================
# PORT CONFIGURATION (only used if USE_REVERSE_PROXY=false)
# ==============================================================================

# HTTP port for Apache webserver
# Change this if running multiple projects simultaneously
HTTP_PORT=8080

# HTTPS port for Apache webserver
HTTPS_PORT=8443

# MySQL/MariaDB port (optional, for external connections)
# Set to empty to disable external access: MYSQL_PORT=
MYSQL_PORT=3306

# ==============================================================================
# PHP CONFIGURATION
# ==============================================================================

# PHP Version
# Possible values: php8, php81, php82, php83, php84, php85
PHPVERSION=php83

# Document root on host machine
DOCUMENT_ROOT=./www

# Document root inside Apache container
APACHE_DOCUMENT_ROOT=/var/www/html

# Virtual hosts directory
VHOSTS_DIR=./config/vhosts

# Apache logs directory
APACHE_LOG_DIR=./logs/apache2

# PHP configuration file
PHP_INI=./config/php/php.ini

# phpMyAdmin configuration file
PHPMYADMIN_CONFIG=./config/phpmyadmin/config.inc.php

# SSL certificates directory (for Apache direct HTTPS)
SSL_DIR=./config/ssl

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# Database engine and version
# Possible values: mysql8, mysql84, mariadb103, mariadb104, mariadb105, mariadb106, mariadb1011, mariadb118, mariadb121
#
# For Apple Silicon Users: 
# Please select MariaDB as Database. Oracle doesn't build MySQL containers 
# for ARM architecture
DATABASE=mysql8

# MySQL initialization scripts directory
# Place .sql, .sql.gz, or .sh files here to run on first startup
MYSQL_INITDB_DIR=./config/initdb

# MySQL data directory (persistent storage)
MYSQL_DATA_DIR=./data/mysql

# MySQL logs directory
MYSQL_LOG_DIR=./logs/mysql

# ==============================================================================
# DATABASE CREDENTIALS
# ==============================================================================

# MySQL root password
MYSQL_ROOT_PASSWORD=tiger

# Database name
MYSQL_DATABASE=docker

# Database user (non-root)
MYSQL_USER=docker

# Database user password
MYSQL_PASSWORD=docker

# phpMyAdmin Blowfish secret key (auto-generated by init.sh if empty)
# Must be 32 characters long for security
# Leave empty and init.sh will generate a random one
PHPMYADMIN_BLOWFISH_SECRET=

# ==============================================================================
# REVERSE PROXY CONFIGURATION (only used if USE_REVERSE_PROXY=true)
# ==============================================================================

# Nginx configuration directory
NGINX_CONFIG_DIR=./config/nginx

# Nginx SSL certificates directory (auto-generated if missing)
NGINX_SSL_DIR=./config/nginx/ssl

# Nginx logs directory
NGINX_LOG_DIR=./logs/nginx
